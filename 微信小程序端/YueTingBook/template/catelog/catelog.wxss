/* pages/share/catelog/catelog.wxss */
.catelog{
  padding:40px 0px 30px 0px;
  position: fixed;
  top:0;
  background: #fefefe;
  height: 100%;
  width:80%;
  color: #999;
  z-index: 10009;
  
}
.catelog-header{
  position: fixed;
  top: 0px;
  display: flex;
  height:40px;
  width:80%;
  background-color: #fefefe;
  z-index: 10010;
  justify-content: space-between;
  border-bottom: 1px solid #f5f2f0;
}
.catelog-header-col{
  padding: 0px 10px 0px 0px;
  height: 40px;
  line-height: 40px;
  margin-left: 20px;
  color: #634102;
  background-color: #fefefe;
  border-bottom: 2px solid #f5f2f0;
}
.catelog-btn{
  position: fixed;
  bottom: 0px;
  display: flex;
  height:30px;
  width:80%;
  background-color: #fefefe;
}
.catelog-btn-col{
  width:50%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  color: #634102;
  background-color: #fefefe;
  border: 1px solid #f5f2f0;
}
.column{
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.row_item{
    display: flex;
    align-items: center;
    line-height: 30px;
    /* margin-top:5px; */
    border-bottom: 1px solid #f5f2f0;
    margin: 0 20px;
}
.hoverText{
  color: #634102;
}
.show{
  display:flex;
}
.hide{
  display: none;
}
.flag{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  z-index: 10008;
} 

