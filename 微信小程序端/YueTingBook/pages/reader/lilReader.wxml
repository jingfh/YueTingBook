<!--pages/reader/lilReader.wxml-->
<navbar back home read tag text="{{navigationBarTitle}}"></navbar>

<!-- 页面 -->
<view class="container" style="background:{{bodyColor}};padding-top:68px;padding-bottom:9px">
  <!-- 顶层 -->
  <view class="artical-action-top" style="top:{{navigationBarHeight}};" >
  <text decode="true">{{navigationBarTitle}}&nbsp;{{chapter}}</text>
  </view>
  <!-- 中间层，点击，头部底部显示 -->
  <!--bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd"-->
  <view class="artical-action-mid" bindtap="midaction" ></view>

  <!-- 主体内容 -->
  <scroll-view   class="m-read-content"  scroll-top="{{scroll_top}}px" scroll-y="true" scroll-with-animation="true" bindscroll="scrollContain" bindscrolltolower="bindscrolltolower">
    <h4 hidden="{{pageIndex==1}}">{{chapter}}</h4>
    <text decode="true" style="line-height: {{initLineHeight}}px;font-size:{{initFontSize}}px;">{{Text}}</text>
  </scroll-view>

  <!-- 底层 -->
  <view class="artical-action-bottom" bindtap="playNow" data-time="{{lastTapTime}}" >
    <image src="../images/erji2.png" class='img' ></image>
  </view>
  
  <!--<view class="artical-action-bottom" >{{pageIndex}}/{{pageNum}}</view>-->
</view>



<!--播放器-->
  <view  style="display:{{picker}}">
    <picker mode="selector" value="{{speekerIndex}}" range="{{speekerArray}}" range-key="name" 
        bindchange="bindPickerChange">
      <view class="picker">
<!--<image src="{{play?'../images/play.png':'../images/pause.png'}}" class='pickerImg' style="flex:1" bindtap="playControl"></image>-->
        <view class="artical-action-bottom-text" style="flex:1">{{speekerArray[speekerIndex].name}}</view>
<!--<view class="artical-action-bottom-text" style="flex:18">{{speekerArray[speekerIndex].name}}</view>-->
      </view> 
    </picker>
  </view>


<!-- 字体调节等工具 -->
<view class="top-nav-pannel" style="display:{{ziti}}">
  <view class="child-mod" style="padding-top:8px;">
    <view class="todo" >字号</view>
    <text style="padding-left:148rpx;"></text>
    <text class="bk-container-addsub" bindtap="bindSmall">小</text>
    <text style="padding-left:25rpx;">{{initFontSize}}</text>
    <text class="bk-container-addsub" style="margin-left:10px;" bindtap="bindBig">大</text>
  </view>
  <view class="child-mod">
    <view class="todo" >行距</view>
    <text style="padding-left:170rpx;"></text>
    <text class="bk-container-addsub" bindtap="bindSub">-</text>
    <text style="padding-left:25rpx;">{{initLineHeight}}</text>
    <text class="bk-container-addsub" style="margin-left:10px;" bindtap="bindAdd">+</text>
  </view>
  <view class="child-mod">
    <view class="todo">背景</view>
    <block wx:for="{{colorArr}}" wx:for-item="color" wx:key="this">
      <view class="bk-container {{curcolor==index?'bk-container-current':''}}" data-num="{{index}}" style="background-color:{{color.value}}" bindtap="bgChange"></view>
    </block>
  </view>
  <view style="padding-left:180rpx;">
    <block wx:for="{{colorArr}}" wx:for-item="color" wx:key="this">
      <text class="bk-container-text">{{color.name}}</text>
    </block>
  </view>
</view>

<!--目录-->
<import src="../../template/catelog/catelog.wxml"/>
<template is="catelog" data="{{chapters:chapters,showCatelog:showCatelog,title:navigationBarTitle,windowHeight:windows.windowsHeight,chapter:chapter,chapterNo:chapterNo}}"/>

<!-- 底部 -->
<view class="bottom-nav" style="display:{{nav}}">
  <view class="item menu-button" bindtap="changeShowCatelog">
    <view class="item-warp">
      <view class="icon-menu"></view>
      <view class="icon-text">目录</view>
    </view>
  </view>
  <view class="item current" bindtap="zitiaction">
    <view class="item-warp">
      <view class="icon-ft"></view>
      <view class="icon-text">字体</view>
    </view>
  </view>
  <view class="item" bindtap="dayNight">
    <view class="item-warp" wx:if="{{daynight}}">
      <view class="icon-day"></view>
      <view class="icon-text">白天</view>
    </view>
    <view class="item-warp" wx:else>
      <view class="icon-night"></view>
      <view class="icon-text">夜间</view>
    </view>
  </view>
</view>


